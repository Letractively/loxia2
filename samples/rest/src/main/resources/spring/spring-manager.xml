<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"	
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="userInformationManager" class="cn.benjamin.loxia.examples.manager.impl.UserInformationManagerImpl">
		<property name="userDao" ref="userDao"/>
		<property name="userInformationDao" ref="userInformationDao"/>
	</bean>
	<bean id="userMemoManager" class="cn.benjamin.loxia.examples.manager.impl.UserMemoManagerImpl">
		<property name="userDao" ref="userDao"/>
		<property name="userMemoDao" ref="userMemoDao"/>
	</bean>
	<bean id="userManager" class="cn.benjamin.loxia.examples.manager.impl.UserManagerImpl">
		<property name="userDao" ref="userDao"/>
		<property name="userInformationManager" ref="userInformationManager"></property>
	</bean>
</beans>