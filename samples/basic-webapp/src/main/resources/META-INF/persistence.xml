<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="loxia" transaction-type="RESOURCE_LOCAL">
		<mapping-file>META-INF/orm.xml</mapping-file>
		<class>cn.benjamin.loxia.model.OperatingUnit</class>
        <class>cn.benjamin.loxia.model.OperatingUnitType</class>
        <class>cn.benjamin.loxia.model.Privilege</class>
        <class>cn.benjamin.loxia.model.PrivilegeType</class>
        <class>cn.benjamin.loxia.model.Role</class>
        <class>cn.benjamin.loxia.model.User</class>
        <class>cn.benjamin.loxia.model.UserRole</class>             
		<properties>
			<property name="hibernate.dialect" value="cn.benjamin.loxia.examples.CustomHSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.jdbc.batch_size" value="100" />
            <property name="hibernate.cache.use_second_level_cache" value="true" />
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider" />            
            
            <!-- cache configuration -->
         	<property name="hibernate.ejb.classcache.cn.benjamin.loxia.model.User" value="read-only"/>
         	<property name="hibernate.ejb.classcache.cn.benjamin.loxia.model.Role" value="read-only"/>
         	<property name="hibernate.ejb.classcache.cn.benjamin.loxia.model.Privilege" value="read-only"/>
         	<property name="hibernate.ejb.classcache.cn.benjamin.loxia.model.PrivilegeType" value="read-only"/>
         	<property name="hibernate.ejb.classcache.cn.benjamin.loxia.model.OperatingUnit" value="read-write"/>
        </properties>        
	</persistence-unit>
</persistence>