<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="loxia" transaction-type="RESOURCE_LOCAL">
		<mapping-file>META-INF/orm.xml</mapping-file>
		<class>cn.benjamin.loxia.model.OperatingUnit</class>
        <class>cn.benjamin.loxia.model.OperatingUnitType</class>
        <class>cn.benjamin.loxia.model.Privilege</class>
        <class>cn.benjamin.loxia.model.PrivilegeType</class>
        <class>cn.benjamin.loxia.model.Role</class>
        <class>cn.benjamin.loxia.model.User</class>
        <class>cn.benjamin.loxia.model.UserRole</class>
        
        <class>cn.benjamin.loxia.examples.model.UserInformation</class>
		<properties>
			<property name="hibernate.dialect" value="cn.benjamin.loxia.examples.CustomHSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.jdbc.batch_size" value="100" />
        </properties>        
	</persistence-unit>
</persistence>