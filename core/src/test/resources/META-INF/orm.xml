<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm orm_1_0.xsd"
	version="1.0">
	<named-query name="User.findUsers">
		<query><![CDATA[select u from User u]]></query>
	</named-query>
	<named-query name="User.findUserByLoginName">
		<query><![CDATA[select u from User u where u.loginName = :loginName]]></query>
	</named-query>
	<sql-result-set-mapping name="user">
		<column-result name="loginName"/>
		<column-result name="userName"/>
		<column-result name="password"/>
	</sql-result-set-mapping>
</entity-mappings>